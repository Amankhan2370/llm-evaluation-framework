# LLM Configuration
OPENAI_API_KEY=ADD_YOUR_OWN_OPENAI_API_KEY
ANTHROPIC_API_KEY=ADD_YOUR_OWN_ANTHROPIC_API_KEY
EVAL_MODEL_NAME=ADD_YOUR_OWN_MODEL_NAME
LLM_PROVIDER=openai

# Evaluation Configuration
EVAL_DATASET_PATH=data/samples/eval_dataset.json
BATCH_SIZE=10
MAX_CONCURRENT_EVALS=5
EVAL_TIMEOUT=60

# Hallucination Detection
HALLUCINATION_THRESHOLD=0.7
GROUNDING_THRESHOLD=0.6
CITATION_REQUIRED=true
UNSUPPORTED_CLAIM_DETECTION=true

# Grounding Configuration
CONTEXT_OVERLAP_THRESHOLD=0.5
RETRIEVAL_CONFIDENCE_THRESHOLD=0.7
ANSWER_CONTEXT_ALIGNMENT=true

# Adversarial Testing
ADVERSARIAL_ENABLED=true
ADVERSARIAL_VARIANTS=5
STRESS_TEST_ENABLED=true

# Vector Database (for RAG evaluation)
VECTOR_DB_URL=ADD_YOUR_OWN_VECTOR_DB_URL
VECTOR_DB_TYPE=pinecone

# Output Configuration
OUTPUT_FORMAT=json
REPORTS_DIR=reports
GENERATE_SUMMARY=true
GENERATE_DETAILED_REPORT=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
